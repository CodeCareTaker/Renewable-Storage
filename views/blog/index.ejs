<% include ../partials/blogHeader %>

 <div class="container">
     <div class="mainSection">
    <header class="jumbotron">
        
            <h1>Welcome</h1>
            <p>to the Renewable Storage Blog</p>
            <% if (currentUser && currentUser.isAdmin == true) { %>
                <p>
                    <a class="btn btn-primary btn-large" href="/blog/new"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Make a new blog entry</a>
                </p>
            <% } %>
                <p>
                    <a class="btn btn-primary btn-md" href="/blogAsc">Sort by oldest</a>
                    <a class="btn btn-primary btn-md" href="/blog">Sort by latest</a>
                    <a class="btn btn-primary btn-md" href="/blogAlpha">Sort by A-Z</a>
                    <a class="btn btn-primary btn-md" href="/blogAlphaDesc">Sort by Z-A</a>
                </p>
        
    </header>
   <div class="siteBody">
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% blogs.forEach(function(blog){ %>
               <div class="col-md-3 col-sm-6">
                   <div class="thumbnail">
                       <img src="<%= blog.image %>">
                       <div class="caption">
                           <h4><%= blog.title %></h4>
                       </div>
                       <hr>
                       <div class="caption">
                                <p><%- blog.content.substring(0, 100) %>...</p>
                       </div>
                       <hr>
                       <p>
                           <a href ="/blog/<%= blog._id %>" class="btn btn-primary">Read Full Entry</a>
                       </p>
                   </div>
               </div>
            <% }); %>
        </div>
        
    


<% include ../partials/altFooter %>